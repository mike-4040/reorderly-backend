{
  "functions": [
    {
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "*.local",
        ".env",
        ".git",
        ".gitignore",
        ".prettierignore",
        ".prettierrc",
        "docs",
        "eslint.config.js",
        "firebase-debug.*.log",
        "firebase-debug.log",
        "node_modules",
        "scripts",
        "src"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build",
        "doppler secrets download --project backend --config stg --format env --no-file > \"$RESOURCE_DIR\"/.env"
      ]
    }
  ],
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm --prefix web run build"
    ]
  }
}
